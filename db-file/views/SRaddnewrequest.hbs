   <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-BmbxuPwQa2lc/FVzBcNJ7UAyJxM6wuqIj61tLrc4wSX0szH/Ev+nYRRuWlolflfl" crossorigin="anonymous">
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0"
      crossorigin="anonymous"></script>

   <link rel="shortcut icon" href="..//CSS/favicon.ico" />
   <link rel="stylesheet" href="/SRhomepagestyle.css">
   <script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
   <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
   <link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">
   <title>Document</title>
</head>

<body>

   <img src="/image.png" class="logo">
   <nav>
      <h2>C R E P</h2>
      <ul>
         <li><a href="/SRhomepage">Home</a></li>
         <li><a href="/">Log Out</a></li>
      </ul>
   </nav>
   <div class="container mt-4">
      <div class="card">
         <div class="card-header">
            <div class="tab-content" id="nav-tabContent">

               <form action="auth/SRaddnewrequest" method="POST">
                  <div class="form-group">
                     <label for="projectTitle">Project title</label>
                     <input type="text" class="form-control" id="projectTitle" name="projectTitle">
                  </div>

                  <div class="form-group">
                     <label for="researchArea">Research area: </label>
                     <br>
                     <select name="researchArea" id="researchArea" >
                        <option selected value="base">Please Select Research area</option>
                        <option value="earlyChildhood">Early childhood</option>
                        <option value="specialEducation">Special education</option>
                        <option value="educationalLeadership">Curriculums</option>
                     </select>
                  </div>

                  <div class="form-group">
                     <label for="advisorsName">Advisors name</label>
                     <input type="text" class="form-control" id="advisorsName" name="advisorsName" required>
                  </div>

                  <div class="form-group">
                     <label for="advisorsEmail">Advisors email</label>
                     <input type="email" class="form-control" id="advisorsEmail" name="advisorsEmail" required>
                  </div>


                  <div class="form-group">
                     <label for="url">Add a URL to the study tool</label>
                     <input type="text" class="form-control" id="url" name="url" required>
                  </div>

                  <div class="form-group">
                     <label for="targetAudience">Target audience</label>
                     <input type="text" class="form-control" id="targetAudience" name="targetAudience" required>
                  </div>


                  <div class="form-group">
                     <label for="educationalDirectorates">Educational directorates</label>
                     <input type="text" class="form-control" id="educationalDirectorates"
                        name="educationalDirectorates" required>
                  </div>

                  <button type="submit" class="btn btn-primary">Submitt</button>
               </form>

            </div>

         </div>
      </div>
      {{#if message}}
      <h4 class="alert alert-danger mt-4">{{message}}</h4>
      {{/if}}
   </div>
   <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-b5kHyXgcpbZJO/tY9Ul7kGkf1S0CWuKcCD38l8YkeH8z8QjE0GmW1gYU5S9FOnJ0"
      crossorigin="anonymous"></script>
</body>

</html>